<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-book"></i> Books</h1>
  <% if user_signed_in? && current_user.librarian? %>
    <%= link_to "Add New Book", new_book_path, class: "btn btn-primary" %>
  <% end %>
</div>


<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text">
            <strong>Author:</strong> <%= book.author.name %>  

            <strong>Genre:</strong> <%= book.genre %>  

            <strong>Year:</strong> <%= book.publication_year %>  

            <strong>ISBN:</strong> <%= book.isbn %>
          </p>
          
          <% if book.available? %>
            <span class="badge bg-success mb-2">Available</span>
          <% else %>
            <span class="badge bg-danger mb-2">Borrowed</span>
          <% end %>
          
          <p class="card-text"><%= truncate(book.description, length: 100) %></p>
        </div>
        
        <div class="card-footer">
        <%= link_to "View", book, class: "btn btn-info btn-sm" %>
        <% if user_signed_in? && current_user.librarian? %>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", book, data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "btn btn-danger btn-sm" %>
        <% end %>
        </div>

      </div>
    </div>
  <% end %>
</div>

<% if @books.empty? %>
  <div class="text-center mt-5">
    <i class="fas fa-book fa-3x text-muted mb-3"></i>
    <h3 class="text-muted">No books found</h3>
    <p class="text-muted">Start by adding your first book to the library.</p>
    <%= link_to "Add First Book", new_book_path, class: "btn btn-primary" %>
  </div>
<% end %>
