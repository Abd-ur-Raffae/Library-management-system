<div class="row mb-4">
  <div class="col-12">
    <h1><i class="fas fa-search"></i> Search Results</h1>
  </div>
</div>

<div class="row mb-4">
  <div class="col-md-8 mx-auto">
    <form action="<%= library_search_path %>" method="get">
      <div class="input-group">
        <input type="text" name="query" class="form-control form-control-lg" 
               placeholder="Search by title, author, or ISBN..." 
               value="<%= params[:query] %>">
        <button class="btn btn-primary" type="submit">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    </form>
  </div>
</div>

<% if params[:query].present? %>
  <div class="row mb-3">
    <div class="col-12">
      <p class="text-muted">
        <% if @books.any? %>
          Found <%= pluralize(@books.count, 'result') %> for "<strong><%= params[:query] %></strong>"
        <% else %>
          No results found for "<strong><%= params[:query] %></strong>"
        <% end %>
      </p>
    </div>
  </div>
<% end %>

<div class="row">
  <% @books.each do |book| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= book.title %></h5>
          <p class="card-text">
            <strong>Author:</strong> <%= book.author.name %>  

            <strong>Genre:</strong> <%= book.genre %>  

            <strong>Year:</strong> <%= book.publication_year %>  

            <strong>ISBN:</strong> <%= book.isbn %>
          </p>
          
          <% if book.available? %>
            <span class="badge bg-success mb-2">Available</span>
          <% else %>
            <span class="badge bg-danger mb-2">Borrowed</span>
          <% end %>
          
          <p class="card-text"><%= truncate(book.description, length: 100) %></p>
        </div>
        
        <div class="card-footer">
          <%= link_to "View", book, class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @books.empty? && params[:query].present? %>
  <div class="text-center mt-5">
    <i class="fas fa-search fa-3x text-muted mb-3"></i>
    <h3 class="text-muted">No books found</h3>
    <p class="text-muted">Try searching with different keywords or browse all books.</p>
    <%= link_to "View All Books", books_path, class: "btn btn-primary" %>
  </div>
<% end %>
