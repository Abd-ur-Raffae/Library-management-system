<div class="d-flex justify-content-between align-items-center mb-4">
  <h1><i class="fas fa-user-clock"></i> My Book Requests</h1>
  <%= link_to "New Request", new_book_request_path, class: "btn btn-primary" %>
</div>

<!-- Pending Requests -->
<div class="card mb-4">
  <div class="card-header bg-warning text-dark">
    <h5 class="mb-0"><i class="fas fa-clock"></i> Pending Requests (<%= @pending_requests.count %>)</h5>
  </div>
  <div class="card-body">
    <% if @pending_requests.any? %>
      <% @pending_requests.each do |request| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h6 class="card-title">
                  <%= link_to request.book.title, request.book, class: "text-decoration-none" %>
                  <small class="text-muted">by <%= request.book.author.name %></small>
                </h6>
                <p class="card-text">
                  <strong>Requested:</strong> <%= request.requested_date.strftime("%b %d, %Y") %>  

                  <strong>Needed by:</strong> <%= request.needed_by_date.strftime("%b %d, %Y") %>
                  <% if request.needed_by_date < Date.current + 3.days %>
                    <span class="badge bg-warning ms-2">Urgent</span>
                  <% end %>
                </p>
                <p class="card-text"><small class="text-muted"><%= truncate(request.reason, length: 100) %></small></p>
              </div>
              <div class="col-md-4 text-end">
                <div class="btn-group" role="group">
                  <%= link_to "View", request, class: "btn btn-info btn-sm" %>
                  <%= link_to "Edit", edit_book_request_path(request), class: "btn btn-warning btn-sm" %>
                  <%= link_to "Cancel", request, data: { "turbo-method": :delete, "turbo-confirm": "Cancel this request?" }, class: "btn btn-danger btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-4">
        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No Pending Requests</h4>
        <p class="text-muted">You don't have any pending book requests.</p>
        <%= link_to "Request a Book", new_book_request_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Processed Requests -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0"><i class="fas fa-history"></i> Request History</h5>
  </div>
  <div class="card-body">
    <% if @processed_requests.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Book</th>
              <th>Requested</th>
              <th>Status</th>
              <th>Processed</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @processed_requests.each do |request| %>
              <tr>
                <td>
                  <strong><%= request.book.title %></strong>  

                  <small class="text-muted">by <%= request.book.author.name %></small>
                </td>
                <td><%= request.requested_date.strftime("%b %d, %Y") %></td>
                <td>
                  <span class="badge bg-<%= request.approved? ? 'success' : 'danger' %>">
                    <%= request.status.capitalize %>
                  </span>
                </td>
                <td>
                  <%= request.approved_date&.strftime("%b %d, %Y") %>  

                  <small class="text-muted">by <%= request.approved_by&.email %></small>
                </td>
                <td>
                  <%= link_to "View", request, class: "btn btn-info btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted">No processed requests yet.</p>
    <% end %>
  </div>
</div>
